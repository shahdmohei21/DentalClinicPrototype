@model DentalClinicPrototype.Models.MedicalRecord

@{
    ViewData["Title"] = "Edit Medical Record";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="doctor-card">
    <div class="card-header">
        <h5>Edit Medical Record</h5>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Patient Information</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.Patient?.User?.UserName</p>
                        <p><strong>Record Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="EditMedicalRecord" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PatientId" />
            <input type="hidden" asp-for="DoctorId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label">Diagnosis</label>
                <textarea asp-for="Diagnosis" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save mr-1"></i> Save Changes
                </button>
                <a asp-action="MyPatients" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-1"></i> Back to Patients
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}