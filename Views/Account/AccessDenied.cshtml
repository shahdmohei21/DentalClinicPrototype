@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Access Denied</h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="mb-3">You do not have permission to access this resource.</h4>
                    <p class="mb-4">
                        @if (!string.IsNullOrEmpty((string)ViewData["ReturnUrl"]))
                        {
                            <span>You tried to access: <strong>@ViewData["ReturnUrl"]</strong></span>
                        }
                    </p>
                    <div>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>