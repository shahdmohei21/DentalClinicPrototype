    @@media (max-width: 1200px) {
        .hero h1

    {
        font-size: 3.5rem;
    }

    }

    @@media (max-width: 991px) {
        .hero h1

    {
        font-size: 3rem;
    }

    .hero p {
        font-size: 1.3rem;
    }

    .hero-btn {
        padding: 0.9rem 2rem;
        font-size: 1.1rem;
    }

    .about-content {
        flex-direction: column;
    }

    .hero-content {
        margin-left: 5%;
        max-width: 90%;
    }

    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    }

